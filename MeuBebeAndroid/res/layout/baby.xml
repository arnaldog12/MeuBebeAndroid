<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_boy" >
    
    <ImageView
        android:id="@+id/baby_image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/foreground_boy" />
    
    <TextView
        android:id="@+id/baby_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/baby_margin_left_text"
        android:layout_toRightOf="@+id/baby_image"
        android:textColor="@android:color/white"
        android:textSize="@dimen/baby_name_text_size" />
    
    <TextView
        android:id="@+id/baby_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="@dimen/baby_margin_left_text"
        android:layout_below="@+id/baby_name"
        android:layout_toRightOf="@+id/baby_image"
        android:textColor="@android:color/white"
        android:textSize="@dimen/baby_age_text_size" />
    
    <ImageButton
        android:id="@+id/edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:src="@drawable/arrow_right"
        android:background="#0000" />

</RelativeLayout>