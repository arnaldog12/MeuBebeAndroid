<?xml version="1.0" encoding="utf-8"?>

<!-- @author GeckoApps Team -->

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_neutral" >

    <RelativeLayout
        android:id="@+id/tabBar"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/tab_bar_neutral" >

        <ImageButton
            android:id="@+id/imageButtonUpdateHistoric"
		    android:layout_width="40dp"
		    android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/button_update"
            android:background="#00000000"
            android:onClick="loadHistoric" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@string/graphics"
			android:textSize="18dp"
			android:textColor="#FFFFFF" />
        
        <TextView
            android:id="@+id/babyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/title"
            android:layout_alignParentBottom="true"
            android:text="@string/baby_name"
			android:textSize="12dp"
			android:textColor="#FFFFFF" />
        
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tabBar"
        android:layout_above="@+id/navigationBar"
        android:orientation="vertical">
    
	    <FrameLayout
	        android:id="@+id/dataGraphics"
	        android:layout_width="fill_parent"
	        android:layout_height="140dp"
	        android:gravity="center" >
	        
	        <android.support.v4.view.ViewPager
			    android:id="@+id/viewPager"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent" />
	            
	    </FrameLayout>
	    
		<TableLayout
	        android:id="@+id/tableGraphics"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
	        android:gravity="center_vertical|center_horizontal" >
	        
	        <TableRow  
		        android:id="@+id/tableRow1"  
		        android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
		        android:gravity="center_horizontal|center_vertical" >
		        
			    <TextView
			        android:text=""
			        android:layout_width="45dp"
			        android:layout_height="wrap_content"
			        android:gravity="center_horizontal"
			        android:textColor="#000000"
			        android:textStyle="bold" />
		        
			    <TextView
			        android:text="Last"
			        android:layout_width="60dp"
			        android:layout_height="wrap_content"
			        android:gravity="center_horizontal"
			        android:textColor="#000000"
			        android:textStyle="bold" />
		        
			    <TextView
			        android:text="Current"
			        android:layout_width="60dp"
			        android:layout_height="wrap_content"
			        android:gravity="center_horizontal"
			        android:textColor="#000000"
			        android:textStyle="bold" />
		    
	    	</TableRow>
	        
	        <TableRow  
		        android:id="@+id/tableRow2"  
		        android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
		        android:gravity="center_horizontal|center_vertical" >
		        
			    <TextView
			        android:text="Weight:"
			        android:layout_height="wrap_content"
			        android:gravity="right"
			        android:textColor="#000000"
			        android:textStyle="bold" />
		        
			    <TextView
		        	android:id="@+id/textViewBabyLastWeight"
			        android:text=""
			        android:layout_height="wrap_content"
			        android:gravity="center_horizontal"
			        android:textColor="#000000"
			        android:textStyle="bold" />
		        
			    <TextView
		        	android:id="@+id/textViewBabyCurrentWeight"
			        android:text=""
			        android:layout_height="wrap_content"
			        android:gravity="center_horizontal"
			        android:textColor="#000000"
			        android:textStyle="bold" />
		    
	    	</TableRow>
	        
	        <TableRow  
		        android:id="@+id/tableRow3"  
		        android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
		        android:gravity="center_horizontal|center_vertical" >
		        
			    <TextView
			        android:text="Height:"
			        android:layout_height="wrap_content"
			        android:gravity="right"
			        android:textColor="#000000"
			        android:textStyle="bold" />
		        
			    <TextView
		        	android:id="@+id/textViewBabyLastHeight"
			        android:text=""
			        android:layout_height="wrap_content"
			        android:gravity="center_horizontal"
			        android:textColor="#000000"
			        android:textStyle="bold" />
		        
			    <TextView
		        	android:id="@+id/textViewBabyCurrentHeight"
			        android:text=""
			        android:layout_height="wrap_content"
			        android:gravity="center_horizontal"
			        android:textColor="#000000"
			        android:textStyle="bold" />
		    
	    	</TableRow>
	    	 
	    </TableLayout>
		        
	    <TextView
	        android:id="@+id/textViewBabyHealth"
	        android:text="@string/not_healthy"
	        android:layout_width="fill_parent"
	        android:layout_height="40dp"
	        android:layout_marginTop="10dp"
	        android:gravity="center_horizontal|center_vertical"
	        android:textColor="#FF0000" />
    
    </LinearLayout>

    <LinearLayout
        android:id="@+id/navigationBar"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/navigation_bar_neutral"
        android:gravity="center_vertical" >

        <ImageButton
            android:id="@+id/buttonMenuGraphics"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/button_graphics_selected"
            android:background="#20000000"
            android:onClick="loadGraphics" />
        
        <ImageButton
            android:id="@+id/buttonMenuVaccines"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:src="@drawable/button_vaccines"
            android:onClick="loadVaccines" />
        
        <ImageButton
            android:id="@+id/buttonMenuMyBaby"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:src="@drawable/button_my_baby"
            android:onClick="loadMain" />
        
        <ImageButton
            android:id="@+id/buttonMenuProgress"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:src="@drawable/button_progress"
            android:onClick="loadProgress" />
        
        <ImageButton
            android:id="@+id/buttonMenuTips"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:src="@drawable/button_tips"
            android:onClick="loadTips" />
    
    </LinearLayout>

    <LinearLayout
        android:id="@+id/navigationSubtitles"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#00000000"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/buttonMenuGraphicsSubtitle"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/graphics"
            android:textColor="#FFFFFFFF"
            android:background="#00000000"
            android:onClick="loadGraphics"
            android:textSize="12dp" />
        
        <Button
            android:id="@+id/buttonMenuVaccinesSubtitle"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/vaccines"
            android:textColor="#FFFFFFFF"
            android:background="#00000000"
            android:onClick="loadVaccines"
			android:textSize="12dp" />
        
        <Button
            android:id="@+id/buttonMenuMyBabySubtitle"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/my_baby"
            android:textColor="#FFFFFFFF"
            android:background="#00000000"
            android:onClick="loadMain"
			android:textSize="12dp" />
        
        <Button
            android:id="@+id/buttonMenuProgressSubtitle"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/progress"
            android:textColor="#FFFFFFFF"
            android:background="#00000000"
            android:onClick="loadProgress"
			android:textSize="12dp" />
        
        <Button
            android:id="@+id/buttonMenuTipsSubtitle"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/tips"
            android:textColor="#FFFFFFFF"
            android:background="#00000000"
            android:onClick="loadTips"
			android:textSize="12dp" />
    
    </LinearLayout>
    
</RelativeLayout>